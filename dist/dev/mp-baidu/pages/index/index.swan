<view class="home"><block s-if="{{swiperList.lenght>0}}"><view class="banner"><swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{swiperColor}}" indicator-active-color="{{activeColor}}"><block s-for="{{swiperList}}" s-for-item="item" s-for-index="__i0__" s-key="img_head"><swiper-item><view class="swiper-item"><image src="{{item.img_head}}"></image></view></swiper-item></block></swiper></view></block><view class="board"><block s-for="{{list}}" s-for-item="item" s-for-index="__i1__" s-key="id"><view class="li"><view data-event-opts="{{[['tap',[['gotolink',['$0'],[[['list','id',item.id,'id']]]]]]]}}" class="a" bindtap="__e"><view class="figure"><view class="i ibefore" style="{{'background-image:'+('linear-gradient(180deg, transparent 40%, '+(item.color?item.color:'rgba(0,0,0,.3)')+')')+';'}}"></view><image class="img" mode="widthFix" lazy-load="{{true}}" src="{{item.photo}}"></image><view class="info"><view class="span"><block s-for="{{item.poiListArr}}" s-for-item="i" s-for-index="__i2__"><view class="imgs"><image class="img" mode="heightFix" src="{{topList[i]}}"></image></view></block></view><view class="h2">{{item.name}}</view><block s-if="{{item.introduction_show==1}}"><view class="p">{{item.introduction}}</view></block></view></view><view class="list"><block s-for="{{item.poi_list}}" s-for-item="img" s-for-index="__i3__" s-key="id"><view class="img"><view class="span"><image class="img" lazy-load="{{true}}" src="{{img.photo}}" mode="aspectFill"></image></view><view class="p">{{img.chinesename}}</view></view></block><view class="icon _em"></view></view></view></view></block></view><view class="footer"><block s-if="{{loadList}}"><view class="p">正在加载...</view></block><block s-else><view data-event-opts="{{[['tap',[['gotoTop',['$event']]]]]}}" class="goback p" bindtap="__e">😆已经到底了，回到顶部</view></block></view></view>