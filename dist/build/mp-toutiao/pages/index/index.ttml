<scroll-view class="home-view" scroll-y="true" scroll-anchoring="true" upper-threshold="50" lower-threshold="100" data-event-opts="{{[['scroll',[['scrolltoupperFun',['$event']]]],['scrolltolower',[['getList',['$event']]]]]}}" bindscroll="__e" bindscrolltolower="__e"><view class="home"><block tt:if="{{swiperList}}"><view class="banner"><swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{swiperColor}}" indicator-active-color="{{activeColor}}"><block tt:for="{{swiperList}}" tt:for-item="item" tt:for-index="__i0__" tt:key="img_head"><swiper-item><view class="swiper-item"><image src="{{item.img_head}}"></image></view></swiper-item></block></swiper></view></block><view class="tabs-view" id="tab_view"><view class="{{(('tabs')+' '+(addFix?'tab-fixed':''))}}"><block tt:for="{{tabs}}" tt:for-item="item" tt:for-index="i" tt:key="name"><text data-event-opts="{{[['tap',[['changeTab',['$0',i],[[['tabs','name',item.name,'tag']]]]]]]}}" class="{{(('span')+' '+(item.select?'selected':''))}}" bindtap="__e"><text class="i">{{item.name}}</text></text></block></view></view><view class="board" id="board"><block tt:for="{{list}}" tt:for-item="item" tt:for-index="__i1__" tt:key="id"><view class="li"><view data-event-opts="{{[['tap',[['gotolink',['$0'],[[['list','id',item.id,'id']]]]]]]}}" class="a" bindtap="__e"><view class="figure"><view class="i ibefore" style="{{'background-image:'+('linear-gradient(180deg, transparent 40%, '+(item.color?item.color:'rgba(0,0,0,.3)')+')')+';'}}"></view><image class="img" mode="widthFix" lazy-load="{{true}}" src="{{item.photo}}"></image><view class="info"><view class="span"><block tt:for="{{item.poiListArr}}" tt:for-item="i" tt:for-index="__i2__"><view class="imgs"><image class="img" mode="heightFix" src="{{topList[i]}}"></image></view></block></view><view class="h2">{{item.name}}</view><block tt:if="{{item.introduction_show==1}}"><view class="p">{{item.introduction}}</view></block></view></view><view class="list"><block tt:for="{{item.poi_list}}" tt:for-item="img" tt:for-index="__i3__" tt:key="id"><view class="img"><view class="span"><image class="img" lazy-load="{{true}}" src="{{img.photo}}" mode="aspectFill"></image></view><view class="p">{{img.chinesename}}</view></view></block><view class="icon _em"></view></view></view></view></block></view><view class="footer"><block tt:if="{{loadList}}"><view class="p">正在加载...</view></block><block tt:else><view data-event-opts="{{[['tap',[['gotoTop',['$event']]]]]}}" class="goback p" bindtap="__e">😆已经到底了，回到顶部</view></block></view></view></scroll-view>