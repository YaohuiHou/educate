<view class="home"><block wx:if="{{swiperList.lenght>0}}"><view class="banner"><swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{swiperColor}}" indicator-active-color="{{activeColor}}"><block wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="img_head"><swiper-item><view class="swiper-item"><image src="{{item.img_head}}"></image></view></swiper-item></block></swiper></view></block><view class="board"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="__i1__" wx:key="id"><view class="li"><view data-event-opts="{{[['tap',[['gotolink',['$0'],[[['list','id',item.id,'id']]]]]]]}}" class="a" bindtap="__e"><view class="figure"><view class="i ibefore" style="{{'background-image:'+('linear-gradient(180deg, transparent 40%, '+(item.color?item.color:'rgba(0,0,0,.3)')+')')+';'}}"></view><image class="img" mode="widthFix" lazy-load="{{true}}" src="{{item.photo}}"></image><view class="info"><view class="span"><block wx:for="{{item.poiListArr}}" wx:for-item="i" wx:for-index="__i2__"><view class="imgs"><image class="img" mode="heightFix" src="{{topList[i]}}"></image></view></block></view><view class="h2">{{item.name}}</view><block wx:if="{{item.introduction_show==1}}"><view class="p">{{item.introduction}}</view></block></view></view><view class="list"><block wx:for="{{item.poi_list}}" wx:for-item="img" wx:for-index="__i3__" wx:key="id"><view class="img"><view class="span"><image class="img" lazy-load="{{true}}" src="{{img.photo}}" mode="aspectFill"></image></view><view class="p">{{img.chinesename}}</view></view></block><view class="icon _em"></view></view></view></view></block></view><view class="footer"><block wx:if="{{loadList}}"><view class="p">正在加载...</view></block><block wx:else><view data-event-opts="{{[['tap',[['gotoTop',['$event']]]]]}}" class="goback p" bindtap="__e">😆已经到底了，回到顶部</view></block></view></view>